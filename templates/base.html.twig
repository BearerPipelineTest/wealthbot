<!DOCTYPE html>
<html>
{% block html_head %}
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>
            {{ (block("title")) ?? '' }} wealthbot.io
        </title>
        <meta content="width=device-width, initial-scale=1, maximum-scale=1" name="viewport">
        {% block stylesheets %}
            <link rel="stylesheet" href="/css/bootstrap.css">
            <link rel="stylesheet" href="/css/bootstrap-theme.css">
            <link rel="stylesheet" href="/css/styles.css">
            <link rel="stylesheet" href="/css/jquery-ui-1.9.2.custom.min.css"/>

            <link rel="stylesheet" href="{{ asset('css/email.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/icons.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/jquery-picklist.css/') }}"/>
            <link rel="stylesheet" href="{{ asset('css/theme-css/style.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/billing.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/admin-styles.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/admin.interfaces.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/icons-color.css') }}"/>

        {% endblock %}

        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />

    </head>
{% endblock %}

{% block html_body %}
    <body id="mainApp">
    {% block headernav %}
        {% if app.environment != 'prod' %}
            <div class="navbar  navbar-default">
                <div class="navbar-inner">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="/" name="top">wealthbot.io</a>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li><a href="{{ path('logout') }}">Logout</a></li>
                                {% endif %}

                                {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                                    <li class="pull-right">
                                        <a href="{{ path('rx_user_switch_to_admin', { _switch_user: '_exit' }) }}">Back to Admin</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div><!--/.navbar-collapse -->
                    </div>
                    <!--/.container-fluid -->
                </div>
                <!--/.navbar-inner -->
            </div>
        {% endif %}
    {% endblock %}

    {% block main_container %}
        <div class="container">
            {% block flash_messages %}
                {% for type, flashMessages in app.session.flashbag.all() %}
                    {% for flashMessage in flashMessages %}
                        <div class="alert alert-{{ type }}">
                            {{ flashMessage }}
                            <a class="close" data-dismiss="alert" href="#">&times;</a>
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endblock %}

            {% block body %}{% endblock %}
        </div>
    {% endblock %}

    {% block javascripts %}
        <script type="text/javascript" src="{{ asset('js/jquery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery/jquery-ui-1.9.2.custom.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery/jquery.form.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery/jquery.autoNumeric.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery/jquery.placeholder.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/typeahead.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/custom.js') }}"></script>
        <script src="{{ asset('js/backbone.marionette/underscore.js') }}"></script>
        <script src="{{ asset('js/ria/Util.js') }}"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $("[rel=popover]").popover();
            });
        </script>
    {% endblock %}
    </body>
{% endblock %}
</html>