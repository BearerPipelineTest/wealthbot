{% extends with_layout ? '/Ria/layout.html.twig': '/Ria/empty_layout.html.twig' %}

{% block body %}
    <h1>Workflow</h1>
    <ul class="nav nav-tabs ">
        <li {{ tab == 'active' ? 'class="active nav-item"' : 'nav-item' }}>
            <a class="nav-link" data-toggle="tab" href="#tab_active" >Active Workflow</a>
        </li>
        <li {{ tab == 'archived' ? 'class="active nav-item"' : 'nav-item' }}>
            <a class="nav-link" data-toggle="tab" href="#tab_archived" >Archived Workflow</a>
        </li>
        <li {{ tab == 'activity' ? 'class="active nav-item"' : 'nav-item' }}>
            <a class="nav-link" data-toggle="tab" href="#tab_activity" >Activity Summary</a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane {{ tab == 'active' ? 'active' : '' }}" id="tab_active" data-tab="active">
            {% include '/Ria/Workflow/_active_workflow_list.html.twig' with { 'pagination': paginations['active'] } %}
        </div>

        <div class="tab-pane {{ tab == 'archived' ? 'active' : '' }}" id="tab_archived" data-tab="archived">
            {% include '/Ria/Workflow/_archived_workflow_list.html.twig' with { 'pagination': paginations['archived'] } %}
        </div>

        <div class="tab-pane {{ tab == 'activity' ? 'active' : '' }}" id="tab_activity" data-tab="activity">
            {% include '/Ria/Workflow/_workflow_activity_list.html.twig' with { 'pagination': paginations['activity'] } %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% if not with_layout %}
            <script type="text/javascript" src="{{ asset('js/ria/ria.workflow.js') }}"></script>
    {% endif %}
{% endblock %}