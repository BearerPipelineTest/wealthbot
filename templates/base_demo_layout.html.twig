<!DOCTYPE html>
<html>
{% block html_head %}
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>
            {{ (block("title")) ?? '' }} wealthbot.io
        </title>
        <meta content="width=device-width, initial-scale=1, maximum-scale=1" name="viewport">
        {% block stylesheets %}
            <link rel="stylesheet" href="/css/bootstrap.css">
            <link rel="stylesheet" href="/css/bootstrap-theme.css">
            <link rel="stylesheet" href="/css/styles.css">
            <link rel="stylesheet" href="/css/jquery-ui-1.9.2.custom.min.css"/>
            <link rel="stylesheet" href="{{ asset('css/email.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/icons.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/jquery-picklist.css/') }}"/>
            <link rel="stylesheet" href="{{ asset('css/theme-css/style.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/billing.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/admin-styles.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/admin.interfaces.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/icons-color.css') }}"/>

        {% endblock %}

        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />

    </head>
{% endblock %}

{% block html_body %}
    <body>
    {% block headernav %}
        {% if app.environment != 'prod' %}
            <div class="navbar navbar-default">
                <div class="navbar-inner">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="/" name="top">wealthbot.io</a>
                        <a href="https://github.com/wealthbot-io"><img style="position: absolute; top: 0; right: 0; border: 0; z-index: 9999;" src="https://camo.githubusercontent.com/38ef81f8aca64bb9a64448d0d70f1308ef5341ab/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6461726b626c75655f3132313632312e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png"></a>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li><a href="{{ path('logout') }}">Logout</a></li>
                                {% endif %}

                                {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                                    <li class="pull-right">
                                        <a href="{{ path('rx_user_switch_to_admin', { _switch_user: '_exit' }) }}">Back to Admin</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div><!--/.navbar-collapse -->
                    </div>
                    <!--/.container-fluid -->
                </div>
                <!--/.navbar-inner -->
            </div>
        {% endif %}
    {% endblock %}


    <div id="page-title">

        <div id="page-title-inner">

            <!-- start: Container test deploy 3-->
            <div class="container">

                <h2>Welcome to the wealthbot.io demo</h2>

            </div>
            <!-- end: Container  test deploy 3-->

        </div>

    </div>


    {% block main_container %}
        <div class="container">
            {% block flash_messages %}
                {% for type, flashMessages in app.session.flashbag.all() %}
                    {% for flashMessage in flashMessages %}
                        <div class="alert alert-{{ type }}">
                            {{ flashMessage }}
                            <a class="close" data-dismiss="alert" href="#">&times;</a>
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endblock %}

            {% block body %}{% endblock %}
        </div>
    {% endblock %}
    <div id="footer">
        <a href="http://wealthbot.io/">Learn more about wealthbot.io</a>
    </div>

    {% block javascripts %}
        <script type="text/javascript" src="{{ asset('js/jquery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery/jquery-ui-1.9.2.custom.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery/jquery.form.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery/jquery.autoNumeric.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery/jquery.placeholder.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/typeahead.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/custom.js') }}"></script>
        <script src="{{ asset('js/backbone.marionette/underscore.js') }}"></script>
        <script src="{{ asset('js/ria/Util.js') }}"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $("[rel=popover]").popover();
            });
        </script>
    {% endblock %}
    </body>
{% endblock %}
</html>